<h1>Listing cards</h1>

<table>
  <tr>
    <th>Fronttext</th>
    <th>Backtext</th>
    <th>Deck</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.fronttext %></td>
    <td><%= card.backtext %></td>
    <td><%= card.deck_id %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

